{% if resource.keyword is defined and not resource.keyword is empty %}
    <div class="col-md-12 ">
        <div class="panel panel-default">
            <div class="panel-heading collapsible" data-toggle="collapse" data-target="#collapseTwo">
                <h4 class="panel-title"><span> {{ record_type }} Keywords</span></h4>

            </div>
            <div id="collapseTwo" class="panel-collapse collapse in">
                <div class="panel-body">
                    <ul>
                        {% for kw in resource.keyword %}
                        <li>
                            <strong class="text-info">{{ (kw.thesaurus.title ?: 'Keywords') ~ (kw.keywordType ? " (#{kw.keywordType})" : '') ~':'}}</strong>
                            <ul class="list-inline">
                                {% for k in kw.keyword %}
                                <li>
                                    {{ k }}{{ not loop.last ? ', ' }}
                                </li>
                                {% endfor %}
                            </ul>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endif %}