<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> ID </th>
            <th> Title </th>
            <th> Owner </th>
            <th colspan="3" class="text-center"> Metadata Link </th>
        </tr>
    </thead>
    <tbody>
        {% for row in data %}
        <tr>
            <td> <a href="{{ path(active_page ~ 'view', {id: row.id}) }}">{{ row.id }}</a> </td>
            <td> {{ row.title }} </td>
            <td> {{ row.owner }} </td>
            <td class="text-center text-nowrap"><a href="{{ path('metadata', {entity: active_page, id: row.id, format: 'json'}) }}">mdJSON</a></td>
            <td class="text-center text-nowrap"><a href="{{ path('metadata', {entity: active_page, id: row.id, format: 'xml'}) }}">ISO 19115-2</a></td>
            <td class="text-center text-nowrap"><a href="{{ path('metadata', {entity: active_page, id: row.id, format: 'html'}) }}">HTML</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>