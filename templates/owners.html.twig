{% extends "layout.html.twig" %}

{% block title %}
{{ title }}
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <div class="page-header">
      <h1>List of Owners</h1>
    </div>
    <p>
      The table below lists all entity(e.g. project and product) owners. Click the
      desired entry in the list below to return a JSON response for the related
      entity. The JSON response will list all entities for that owner.
    </p>
    {% for key, owner in owners %}
    <div class="panel panel-info">
      <!-- Default panel contents -->
      <div class="panel-heading">{{ key|capitalize }}</div>
      {% if owner is empty %}
      <div class="panel-body">
        <p class="text-danger">No {{ key|capitalize }} records.</p>
      </div>
      {% else %}
      <!-- List group -->
      <div class="list-group">
        {% for itm in owner %}
        <a href="/{{ key }}?owner={{ itm|url_encode|replace({'%20': '+'}) }}" class="list-group-item">{{ itm }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
